{
  "name": "@siguici/plugwind",
  "version": "0.6.0",
  "exports": {
    ".": "./jsr/index.ts"
  },
  "include": ["deno.json", "jsr/*.ts", "README.md", "LICENSE.md"],
  "exclude": [
    ".*",
    "jsr/*.test.ts",
    "js/*",
    "ts/*",
    "Makefile",
    "scripts/*",
    "src/*",
    "tests/*",
    "biome.json",
    "tsconfig.json",
    "pnpm-lock.yaml",
    "deno.lock"
  ],
  "publish": {
    "exclude": ["!jsr/*.ts"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "check": "deno task check:fmt && deno task check:lint",
    "check:fmt": "deno fmt --check",
    "check:lint": "deno check jsr/*.ts",
    "fix": "deno lint && deno fmt"
  }
}
