{
  "name": "@siguici/plugwind",
  "version": "0.9.0",
  "exports": {
    ".": "./jsr/index.ts",
    "./define": "./jsr/define.ts",
    "./types": "./jsr/types.ts",
    "./utils": "./jsr/utils.ts"
  },
  "include": ["deno.json", "jsr/*.ts", "README.md", "LICENSE.md"],
  "exclude": [
    ".*",
    "jsr/*.test.ts",
    "js/*",
    "ts/*",
    "Makefile",
    "scripts/*",
    "src/*",
    "tests/*",
    "biome.json",
    "tsconfig.json",
    "pnpm-lock.yaml",
    "deno.lock"
  ],
  "publish": {
    "exclude": ["!jsr/*.ts"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["jsr/"],
    "exclude": ["!jsr/*.ts", "!jsr/*.test.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "check": "deno task check:fmt && deno task check:lint && deno task check:types",
    "check:fmt": "deno fmt --check",
    "check:lint": "deno lint",
    "check:types": "deno check jsr/*.ts",
    "fix": "deno lint --fix && deno fmt"
  }
}
