{
  "name": "plugwind.js",
  "version": "0.2.0",
  "license": "MIT",
  "packageManager": "pnpm@9.6.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.16",
    "pnpm": ">=9.6",
    "npm": "prefer using pnpm",
    "yarn": "prefer using pnpm"
  },
  "type": "module",
  "module": "./js/index.js",
  "main": "./js/index.js",
  "types": "./ts/",
  "files": ["js/**/*", "ts/**/*"],
  "exports": {
    ".": {
      "types": "./ts/index.d.ts",
      "default": "./js/index.js",
      "import": "./js/index.mjs",
      "require": "./js/index.cjs"
    },
    "./utils": {
      "types": "./ts/utils.d.ts",
      "default": "./js/utils.js",
      "import": "./js/utils.mjs",
      "require": "./js/utils.cjs"
    },
    "./package.json": "./package.json"
  },
  "bugs": "https://github.com/siguici/plugwind/issues",
  "homepage": "https://github.com/siguici/plugwind",
  "author": {
    "name": "Sigui KessÃ© Emmanuel",
    "email": "siguici@proton.me",
    "url": "https://github.com/siguici"
  },
  "description": "ðŸ§© PlugWind Make it easy to create TailwindCSS plugins.",
  "keywords": [
    "plugwind",
    "componants",
    "css",
    "dark-mode",
    "light-mode",
    "plugin",
    "tailwindcss",
    "typescript",
    "utilities"
  ],
  "sideEffects": false,
  "private": false,
  "scripts": {
    "build": "pnpm build.node && pnpm build.deno",
    "build.node": "pnpm clear.node && tsc --build && tsm scripts/build.ts",
    "build.deno": "pnpm clear.deno && pnpm denoify",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "clear": "pnpm clear.node && pnpm clear.deno",
    "clear.node": "rimraf js && rimraf ts",
    "clear.deno": "rimraf jsr/*",
    "denoify": "denoify --out jsr",
    "debug": "pnpm check && pnpm test",
    "fix": "pnpm lint && pnpm format",
    "format": "biome format --write .",
    "lint": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^22.0.2",
    "denoify": "^1.6.13",
    "esbuild": "^0.23.0",
    "globby": "^14.0.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.7",
    "tsm": "^2.3.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.7"
  }
}
